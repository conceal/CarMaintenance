<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userPage.typePage.ProgramActivity"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="@color/white"
        android:fitsSystemWindows="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/program_details_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/back"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/program_details_program_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="服务"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="45dp"
            />

        <TextView
            android:id="@+id/program_details_evaluation_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="评论"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="45dp"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/appointment_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/buy"
            app:fabSize="normal"
            android:backgroundTint="#FF3276"
            android:tint="@color/white"
            app:rippleColor="#FF3276" />
        <androidx.core.widget.NestedScrollView
            android:id="@+id/program_details_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/program_details_program_img"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:scaleType="fitXY"
                    android:layout_margin="5dp"/>
                <TextView
                    android:id="@+id/program_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="保养项目"
                    android:textSize="26sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/program_details_store_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="保养店"
                            android:textSize="20sp"
                            android:layout_marginLeft="15dp"/>
                        <TextView
                            android:id="@+id/program_details_program_volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="销量"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/program_details_program_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="价格"
                            android:layout_gravity="right"
                            android:textColor="@color/red"
                            android:layout_marginRight="15dp"/>
                        <RatingBar
                            android:id="@+id/program_details_ratingBar"
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:rating="0"
                            android:numStars="5"
                            android:progressTint="@color/gold"
                            android:layout_gravity="right"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            style="?android:attr/ratingBarStyleSmall"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/program_details_store_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="重庆市南岸区海棠溪烟雨路1号附4号"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"/>
                    <LinearLayout
                        android:id="@+id/program_details_store_navigation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:tint="@color/red"
                            android:src="@drawable/navigation"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="导航"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
                <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                    android:id="@+id/program_details_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/program_details"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"/>
                <FrameLayout
                    android:id="@+id/program_details_evaluation_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务评论"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/evaluation_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="41条评论"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="15dp"/>
                </FrameLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/program_details_evaluation_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</LinearLayout>