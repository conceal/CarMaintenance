<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/store_details_evaluation_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/head"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/store_details_evaluation_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/store_details_evaluation_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评价时间"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  |  "/>
                <TextView
                    android:id="@+id/store_details_evaluation_program"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保养项目名"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/store_details_evaluation_details"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="评价"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/evaluate_store_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="保养店"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/stars"
                android:tint="@color/gold"
                android:layout_gravity="right"/>
            <TextView
                android:id="@+id/store_details_evaluation_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评分"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>