<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/program_details_user_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/head"
            android:layout_marginLeft="15dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/program_details_evaluation_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户昵称"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/program_details_evaluation_brand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="汽车品牌"
                    android:textSize="14sp"
                    android:gravity="bottom"
                    android:layout_marginLeft="6dp"/>
                <TextView
                    android:id="@+id/program_details_evaluation_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2021.05.21"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:layout_marginRight="6dp"
                    />
            </LinearLayout>
            <RatingBar
                android:id="@+id/program_details_evaluation_score"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:numStars="5"
                android:rating="1"
                android:progressTint="@color/gold"
                android:layout_marginTop="5dp"
                style="?android:attr/ratingBarStyleSmall"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
        android:id="@+id/program_details_evaluation_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="评论"
        android:textSize="14sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:id="@+id/program_details_evaluation_program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保养项目"
        android:textSize="12sp"
        android:layout_margin="15dp"/>
</LinearLayout>