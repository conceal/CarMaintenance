<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:background="@drawable/item_background"
    android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/user_recycler_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/head"
            android:scaleType="fitXY"
            />
    </androidx.cardview.widget.CardView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp">
        <TextView
            android:id="@+id/user_recycler_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/user_recycler_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/user_recycler_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式"
            android:textColor="@color/black"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:id="@+id/user_recycler_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="汽车品牌"
            android:textColor="@color/black"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/user_recycler_register_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册时间"
            android:textColor="@color/black"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"/>
    </FrameLayout>
</LinearLayout>